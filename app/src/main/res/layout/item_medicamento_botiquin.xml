<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMedicamento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- Ícono del medicamento -->
        <ImageView
            android:id="@+id/ivIcono"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_marginEnd="@dimen/margin_medium"
            android:src="@drawable/ic_medicamento"
            android:contentDescription="@string/medicine_icon" />

        <!-- Información del medicamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_name"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPresentacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_presentation"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_tiny" />

            <TextView
                android:id="@+id/tvStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_stock"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_tiny" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_status"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_tiny" />

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_medium">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_edit"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_dark"
                android:layout_marginBottom="@dimen/margin_tiny"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestarStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="− Restar"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:backgroundTint="@color/warning"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_stock"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:backgroundTint="@color/success"
                android:layout_marginBottom="@dimen/margin_tiny"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_delete"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:backgroundTint="@color/error"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>